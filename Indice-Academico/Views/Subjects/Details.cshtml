@model Indice_Academico.Data.Entity.Subject

@{
    ViewData["Title"] = "Detalles";
} 

<div class="">
    <h1 class=" ">Detalles del la Asignatura</h1>
</div> 
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Codigo")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Credito")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Credit)
        </dd>
    </dl>
</div>
<div>
    <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success">Editar</a>
    <a type="button" value="Cancelar" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
</div>
