@model Indice_Academico.Data.Entity.Teacher

@{
    ViewData["Title"] = "Details";
}

<div class="">
    <h1 class=" ">Detalles del profesor</h1>
</div> 
<div> 
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Nombre")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Apellido")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
    </dl>
</div>
<div>
    <a type="button" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success">Edit</a>
    <a type="button" value="Cancelar" asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
</div>
