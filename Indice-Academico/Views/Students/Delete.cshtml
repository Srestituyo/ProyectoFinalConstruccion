@model Indice_Academico.Data.Entity.Student

@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<div class="">
    <h1 class=" ">Eliminar Estudiante</h1>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Firstname)
        </dd>
        <dt class="col-sm-2">
            Apellido:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lastname)
        </dd>
        <dt class="col-sm-2">
            Matricula:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentCode)
        </dd>
        <dt class="col-sm-2">
            Carrera:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Career)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Cancelar</a>
    </form>
</div>
@section Scripts {
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    @if (ViewBag.Success != null)
    {
        <script type="text/javascript">$(function SuccessMessage() {
                Swal.fire({
                    icon: 'success',
                    title: 'Estudiante Eliminado correctamente!',
                    showConfirmButton: false,
                    timer: 1500,
                    footer: 'Redirigiendo...'
                })
                setTimeout('Redirect()', 2000);
            })

            function Redirect() {
                window.location = "/Students";
            }
        </script>
     }
}